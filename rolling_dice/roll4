#!/usr/bin/env bash
# Step 4: Require >1, prompt if not given

if [ $# -ge 1 ] && [[ $1 =~ ^[0-9]+$ ]] && [ "$1" -gt 1 ]; then
  max=$1
else
  read -rp "Enter a number greater than 1: " max
  if ! [[ $max =~ ^[0-9]+$ ]] || [ "$max" -le 1 ]; then
    echo "Error: must be >1"
    exit 1
  fi
fi

n=$((RANDOM % max + 1))
echo "You rolled a $n"

