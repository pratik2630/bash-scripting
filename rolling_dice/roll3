#!/usr/bin/env bash
# Step 3: Take max number as an argument

if [ $# -lt 1 ]; then
  echo "Error: Please provide a maximum number"
  exit 1
fi

max=$1
if ! [[ $max =~ ^[0-9]+$ ]] || [ "$max" -lt 1 ]; then
  echo "Error: argument must be an integer >= 1"
  exit 1
fi

n=$((RANDOM % max + 1))
echo "You rolled a $n"
